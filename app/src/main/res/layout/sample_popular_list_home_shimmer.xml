<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageListOneShimmer"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:background="@color/shimmer_gray"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageListTwoShimmer"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:background="@color/shimmer_gray"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imageListOneShimmer"
        app:layout_constraintTop_toTopOf="@id/imageListOneShimmer"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageListThreeShimmer"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:background="@color/shimmer_gray"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imageListTwoShimmer"
        app:layout_constraintTop_toTopOf="@id/imageListTwoShimmer"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageListFourShimmer"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:background="@color/shimmer_gray"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imageListThreeShimmer"
        app:layout_constraintTop_toTopOf="@+id/imageListThreeShimmer"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium" />

    <TextView
        android:id="@+id/textListNamePopularListShimmer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/shimmer_gray"
        android:textColor="@color/letterboxn_skin_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/imageListFourShimmer"
        app:layout_constraintStart_toStartOf="@+id/imageListOneShimmer"
        app:layout_constraintTop_toBottomOf="@+id/imageListFourShimmer" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageUserPicturePopularListShimmer"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:background="@color/shimmer_gray"
        app:layout_constraintStart_toStartOf="@+id/textListNamePopularListShimmer"
        app:layout_constraintTop_toBottomOf="@+id/textListNamePopularListShimmer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

    <TextView
        android:id="@+id/textUsernamePopularListShimmer"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@color/shimmer_gray"
        android:maxLength="12"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageUserPicturePopularListShimmer"
        app:layout_constraintStart_toEndOf="@+id/imageUserPicturePopularListShimmer"
        app:layout_constraintTop_toTopOf="@+id/imageUserPicturePopularListShimmer" />

    <ImageView
        android:id="@+id/imageLikePopularListShimmer"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/textLikeCountPopularListShimmer"
        app:layout_constraintStart_toEndOf="@+id/textUsernamePopularListShimmer"
        app:srcCompat="@drawable/round_favorite_unselected_24"
        app:tint="@color/shimmer_gray" />

    <TextView
        android:id="@+id/textLikeCountPopularListShimmer"
        android:layout_width="12dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:background="@color/shimmer_gray"
        android:textColor="@color/white"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/textUsernamePopularListShimmer"
        app:layout_constraintStart_toEndOf="@+id/imageLikePopularListShimmer"
        app:layout_constraintTop_toTopOf="@+id/textUsernamePopularListShimmer" />

    <ImageView
        android:id="@+id/imageCommentPopularListShimmer"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/textCommentCountPopularListShimmer"
        app:layout_constraintStart_toEndOf="@+id/textLikeCountPopularListShimmer"
        app:srcCompat="@drawable/round_mode_comment_24"
        app:tint="@color/shimmer_gray" />

    <TextView
        android:id="@+id/textCommentCountPopularListShimmer"
        android:layout_width="12dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:background="@color/shimmer_gray"
        android:textColor="@color/white"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/textUsernamePopularListShimmer"
        app:layout_constraintStart_toEndOf="@+id/imageCommentPopularListShimmer"
        app:layout_constraintTop_toTopOf="@+id/textUsernamePopularListShimmer" />

</androidx.constraintlayout.widget.ConstraintLayout>